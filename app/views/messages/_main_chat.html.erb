<div class="main_chat_header">
  <div class="left-header">
    <div class="header-room-name">
      <%= @room.name %>
    </div>
  </div>
  <div class="right-header">
    <div class="chat-delete">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>

<div class="main_chat_chats">
  <%= render partial: 'message', collection: @messages %>
</div>

<%= form_with model: [@room, @message], html: {class: "main_chat_form"}, local: true do |f| %>
  <div class="form-input">
    <%= f.text_field :content, class: 'form-text', placeholder: "type a message" %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <% f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: "submit-button" %>
<% end %>

